    <script src="https://cdn.socket.io/4.5.4/socket.io.min.js"></script>
    <script src="renderer.js"></script>
    <script src="kiosk-navigation.js"></script>

    <script src="https://cdn.socket.io/4.5.4/socket.io.min.js"></script>
    <script>
        console.log('‚úÖ Student interface loaded');

        // Initialize Socket.io for guest mode support
        let socket = null;
        function initializeSocket() {
            try {
                if (!window.electronAPI || !window.electronAPI.getServerUrl) {
                    console.log('‚ö†Ô∏è window.electronAPI not available for socket init');
                    return;
                }
                
                window.electronAPI.getServerUrl().then(serverUrl => {
                    console.log(`üì° Connecting to server: ${serverUrl}`);
                    socket = io(serverUrl, {
                        reconnection: true,
                        reconnectionDelay: 1000,
                        reconnectionDelayMax: 5000,
                        reconnectionAttempts: 10,
                        transports: ['websocket', 'polling']
                    });

                    socket.on('connect', () => {
                        console.log('‚úÖ Socket.io connected:', socket.id);
                    });

                    socket.on('disconnect', () => {
                        console.log('‚ö†Ô∏è Socket.io disconnected');
                    });

                    // Listen for guest access granted event from admin (targeted to specific kiosk)
                    socket.on('guest-access-granted', (data) => {
                        console.log('üîì Guest access granted event received:', data);
                        handleGuestModeEnabled(data);
                    });

                    // Legacy support for broadcast guest mode events
                    socket.on('guest-mode-enabled', (data) => {
                        console.log('üîì Guest mode enabled event received:', data);
                        handleGuestModeEnabled(data);
                    });

                    socket.on('connect_error', (err) => {
                        console.error('‚ùå Socket connect error:', err);
                    });
                }).catch(err => {
                    console.error('‚ùå Error getting server URL:', err);
                });
            } catch (error) {
                console.error('‚ùå Socket initialization error:', error);
            }
        }

        async function handleGuestModeEnabled(data) {
            console.log('üîì Handling guest mode enabled:', data);
            addLog(`üîì Guest mode enabled by admin for lab ${data.labId}`);
            
            // Auto-login as GUEST
            try {
                const systemNumber = document.getElementById('systemNumber').textContent;
                const result = await window.electronAPI.studentLogin({
                    studentId: 'GUEST',
                    password: 'admin123',
                    systemNumber,
                    isGuest: true
                });

                if (result.success) {
                    addLog('‚úÖ Guest mode activated successfully!');
                    document.getElementById('sessionStudentName').textContent = 'Guest User';
                    document.getElementById('sessionStudentId').textContent = 'GUEST';
                    document.getElementById('sessionSystem').textContent = systemNumber;
                    document.getElementById('sessionLoginTime').textContent = new Date().toLocaleTimeString();

                    document.querySelector('.login-container').style.display = 'none';
                    document.getElementById('sessionModal').classList.add('active');
                } else {
                    addLog(`‚ùå Guest mode activation failed: ${result.error}`);
                }
            } catch (error) {
                addLog(`‚ùå Guest mode error: ${error.message}`);
                console.error('Guest mode error:', error);
            }
        }

        // System initialization
        function updateTime() {
            const now = new Date();
            const timeEl = document.getElementById('currentTime');
            if (timeEl) {
                timeEl.textContent = now.toLocaleTimeString();
            }
        }

        function addLog(msg) {
            try {
                const log = document.getElementById('debugLog');
                if (log) {
                    const time = new Date().toLocaleTimeString();
                    log.innerHTML += `<div>[${time}] ${msg}</div>`;
                    log.scrollTop = log.scrollHeight;
                }
            } catch (e) {
                console.error('Log error:', e);
            }
            console.log(msg);
        }

        async function loadSystemInfo() {
            try {
                if (!window.electronAPI || !window.electronAPI.getSystemInfo) {
                    addLog('‚ö†Ô∏è window.electronAPI not available');
                    document.getElementById('computerName').textContent = 'System';
                    document.getElementById('systemNumber').textContent = 'CC1-01';
                    return;
                }

                const sysInfo = await window.electronAPI.getSystemInfo();
                addLog(`‚úÖ System info loaded: ${sysInfo.hostname}`);
                
                document.getElementById('computerName').textContent = sysInfo.hostname;
                document.getElementById('systemNumber').textContent = sysInfo.systemNumber || 'CC1-01';
                
                // After system info is loaded, register kiosk if socket is ready
                if (socket && socket.connected) {
                    const systemNumber = document.getElementById('systemNumber').textContent;
                    socket.emit('register-kiosk', {
                        systemNumber: systemNumber,
                        labId: 'CC1'
                    });
                    console.log(`‚úÖ Registered kiosk with system number: ${systemNumber}`);
                }
            } catch (error) {
                addLog(`‚ùå Error: ${error.message}`);
                document.getElementById('computerName').textContent = 'System';
                document.getElementById('systemNumber').textContent = 'CC1-01';
            }
        }

        // Start time updates
        updateTime();
        setInterval(updateTime, 1000);

        // Load system info after short delay
        setTimeout(() => {
            loadSystemInfo();
            initializeSocket();  // Initialize socket connection for guest mode
        }, 300);

        // Login handler
        document.getElementById('loginForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            
            const studentId = document.getElementById('studentId').value.trim();
            const password = document.getElementById('password').value;
            const systemNumber = document.getElementById('systemNumber').textContent;

            if (!studentId || !password) {
                showError('Please enter Student ID and Password');
                return;
            }

            addLog(`üîê Login attempt for: ${studentId}`);

            try {
                const result = await window.electronAPI.studentLogin({
                    studentId,
                    password,
                    systemNumber
                });

                if (result.success) {
                    addLog(`‚úÖ Login successful!`);
                    
                    document.getElementById('sessionStudentName').textContent = result.student.name;
                    document.getElementById('sessionStudentId').textContent = result.student.studentId;
                    document.getElementById('sessionSystem').textContent = systemNumber;
                    document.getElementById('sessionLoginTime').textContent = new Date().toLocaleTimeString();

                    document.querySelector('.login-container').style.display = 'none';
                    document.getElementById('sessionModal').classList.add('active');
                } else {
                    showError(result.error || 'Login failed');
                    addLog(`‚ùå Login failed: ${result.error}`);
                }
            } catch (error) {
                showError('Login error: ' + error.message);
                addLog(`‚ùå Error: ${error.message}`);
            }
        });

        function showError(msg) {
            const alert = document.getElementById('errorAlert');
            const messageSpan = document.getElementById('errorMessage');
            if (messageSpan) {
                messageSpan.textContent = msg;
            } else {
            alert.textContent = msg;
            }
            alert.classList.remove('d-none');
            alert.classList.add('show');
            setTimeout(() => alert.classList.add('d-none'), 4000);
        }

        function logout() {
            if (window.electronAPI && window.electronAPI.studentLogout) {
                window.electronAPI.studentLogout();
            }
            location.reload();
        }

        addLog('‚úÖ Application ready for login');
    </script>
</body>
</html>
